{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./dist/server",
    "rootDir": ".",
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "isolatedModules": false,
    "jsx": "preserve"
  },
  "include": [
    "server/**/*.ts",
    "tunnel/**/*.ts"
  ],
  "exclude": [
    "src",
    "node_modules",
    "dist"
  ]
}

